doctype html
html(lang="en-US")
	head
		title=title
		link(rel="stylesheet", href="stylesheets/style.css")
	body
		div#container.center
			h1 
				| Create a project
			form(id="newproj" name="newproj" method="post")
				input(type="text"
							name="projtitle"
							placeholder="project title"
							required
							)
				br
				input(type="text"
							name="firstname"
							placeholder="first name"
							required
							)
				br
				input(type="text"
							name="lastname"
							placeholder="last name"
							required
							)
				br
				textarea(name="projdetails" id="projdetails"
						rows="4" cols="41" 
						) Enter details of your project here
				br
				input(type="text"
							name="deadline"
							placeholder="MM/DD/YYYY"
							pattern="(0[1-9]|1[012])[/](0[1-9]|[1-2][0-9]|3[01])[/](19|20)[0-9]{2}" 
							required
							)
				br
				input(type="text"
							name="goal"
							placeholder="set goal"
							required
							)
				input(type="submit"
							name="create"
							value="Create"
							id="btnCreate"
							class="logInSignUpCreate"
							)